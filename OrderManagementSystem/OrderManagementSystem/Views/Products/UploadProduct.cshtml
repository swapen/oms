@model ProductsViewModel

<h2>Add a New Product</h2>

<form enctype="multipart/form-data" asp-controller="products" asp-action="UploadProduct" method="post" class="register-form">
    <br />

    <div class="text-danger">
        @ViewBag.FailedToRegister
    </div>

    Product Name:<br />
    <div class="form-group">
        <input type="text" name="ProductName" id="ProductName" asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    Product Category:<br />
    <div class="form-group">
        <input type="text" name="Category" id="Category" asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    Supplier Information:<br />
    <div class="form-group">
        <input type="text" name="Supplier" id="Supplier" asp-for="Supplier" class="form-control" />
        <span asp-validation-for="Supplier" class="text-danger"></span>
    </div>

    Product Description:<br />
    <div class="form-group">
        <input type="text" name="ProductDescription" id="ProductDescription" asp-for="ProductDescription" class="form-control" />
        <span asp-validation-for="ProductDescription" class="text-danger"></span>
    </div>

    Available Units:<br />
    <div class="form-group">
        <input type="number" min="1" name="AvailableUnits" id="AvailableUnits" asp-for="AvailableUnits" class="form-control" />
        <span asp-validation-for="AvailableUnits" class="text-danger"></span>
    </div>

    Price:<br />
    <div class="form-group">
        <input type="number" name="Price" id="Price" asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    Image:<br />
    <div class="form-group row">
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Image" class="form-control custom-file-input">
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
    </div>

    <button type="submit">Register</button>
</form>

